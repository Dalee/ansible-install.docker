# {{ ansible_managed }}

# allow sudoless connection to docker
export DOCKER_HOST="{{ docker.listen_addr }}"

# emulate jenkins
export WORKSPACE="{{ project_root }}"

# JOB_BASE_NAME deprecated
export JOB_BASE_NAME="{{ project_name }}"

# build name and number
export BUILD_NAME="{{ project_name }}"
export BUILD_NUMBER="1"

# default install mode
export NPM_INSTALL_MODE=testing
export COMPOSER_INSTALL_MODE=testing
